@using System.Security.Claims;
@model EcommerceMVC.Models.DTO.Product.ProductsReponseModel
<section style="background-color: #eee;">
      @if(TempData["Message"] != null)
        {
            <p>@TempData["Message"]</p>
        }
@* 
@{
   var userrr = @User.FindFirst(ClaimTypes.NameIdentifier).Value;
} *@
        
  <div class="container py-5">
    <div class="row">
        @foreach (var item in Model.Data)
        {
            <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
                <div class="card">
                    <div class="d-flex justify-content-between p-3">
                        <p class="lead mb-0">Today's Offer</p>
                        <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong" style="width: 35px; height: 35px;">
                            <p class="text-white mb-0 small"></p>
                        </div>
                    </div>
                    <img src="https://localhost:5001/Images/@item.Image" height="150px" class="card-img-top" alt="@item.ProductName" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <p class="small"><a href="#!" class="text-muted">@item.ProductName</a></p>
                            <p class="small text-danger">@item.Price<s></s></p>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="mb-0">@item.Quality</h5>
                            <h5 class="text-dark mb-0">@item.Price</h5>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <p class="text-muted mb-0">Available: <span class="fw-bold">@item.Quantity</span></p>
                            <div class="ms-auto text-warning">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                             <a asp-controller="Cart" asp-action="AddCart" asp-route-productId="@item.Id" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
  </div>
</section>