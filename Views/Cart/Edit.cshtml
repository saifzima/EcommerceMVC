@model EcommerceMVC.Models.DTO.Transation.TransationResponseModel

<div class="form-container">

    <div id="Data-form">
        <div class="container1">
            <div>
                <form asp-action="EditTransactionInCart">
                    <h1>Modify @Model.Data.ProductName</h1>
                    
                    <div class="form-group" hidden>
                        <label asp-for="Data.Id" class="control-label"></label>
                        <input asp-for="Data.Id" name="Id" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label asp-for="Data.Quantity" class="control-label"></label>
                        <input asp-for="Data.Quantity" name="Quantity" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.ReferenceNo" class="control-label"></label>
                        <input asp-for="Data.ReferenceNo" readonly  class="form-control" />
                         <span asp-validation-for="Data.ReferenceNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.TotalAmount" class="control-label"></label>
                        <input asp-for="Data.TotalAmount" readonly class="form-control" />
                         <span asp-validation-for="Data.TotalAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.ProductName" class="control-label"></label>
                        <input asp-for="Data.ProductName" readonly class="form-control" />
                         <span asp-validation-for="Data.ProductName" class="text-danger"></span>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary">Edit</button>
                        <a asp-action="GetCartByCustomer" class="btn btn-warning">Back to List</a>

                    </div>
                </form>
            </div>

        </div>







    </div>

</div>

@* ends here *@







