@model EcommerceMVC.Models.DTO.Product.ProductResponseModel

<div class="form-container">

    <div id="Data-form">
        <div class="container1">
            <div>
                <form asp-action="BuyProduct">
                    <h1>Buy Product</h1>
                       
                    <div class="form-group" hidden>
                        <label asp-for="Data.Id" class="control-label"></label>
                        <input asp-for="Data.Id" name="Id" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.RefNo" class="control-label"></label>
                        <input asp-for="Data.RefNo" readonly class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.ProductName" class="control-label"></label>
                        <input asp-for="Data.ProductName"  name="ProductName" readonly  class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.Quality" class="control-label"></label>
                        <input asp-for="Data.Quality"  class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Data.Quantity" class="control-label"></label>
                        <input asp-for="Data.Quantity" name="Quantity" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label asp-for="Data.Price" class="control-label"></label>
                        <input asp-for="Data.Price" name="Price"  class="form-control" />

                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary">Buy</button>
                    </div>
                </form>
            </div>

        </div>







    </div>

</div>

@* ends here *@







