@model EcommerceMVC.Models.DTO.Admin.AdminResponseModel
<h1>Customer Information.</h1>

<h4>Customer</h4>
<hr />

<div asp-controller="Customer" asp-action="Edit" style="font-size: 130%;">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Data.Email" />



                <div class="form-group">
                    <label asp-for="Data.FirstName" class="control-label"></label>
                    <input asp-for="Data.FirstName"type="text" class="form-control" />
                    <span asp-validation-for="Data.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Data.LastName" class="control-label"></label>
                    <input asp-for="Data.LastName"type="text" class="form-control" />
                    <span asp-validation-for="Data.LastName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
