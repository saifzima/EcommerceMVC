@model EcommerceMVC.Models.DTO.Cart.CartsResponseModel
<h1>customer Cart</h1>
<table class="table">
    <thead>
         <th>
                RefNo
            </th>
            <th>
                Id
            </th>

            <th>
                DatePaid
            </th>

            <th>
               Totalprice 
            </th>

            <th>
               NumberOfTransaction
            </th>
             <th>
               Actions
            </th>
             <th>
               More Actions
            </th>
            <th>
            More
            </th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Data)
        {
            <tr>
                 <td scope="row">
                    @item.RefNo
                </td>

                <td scope="row">
                    @item.Id
                </td>
                <td scope="row">
                    @item.DatePaid
                </td>
                <td scope="row">
                   @item.TotalPrice
                </td>
                <td scope="row">
                    @item.NumberOfTransaction
                </td>
                <td scope="row">
                   <a asp-action="GetAllTransactionInCart" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                </td>
                
                @if (item.IsPaid)
                {
                     <td scope="row">
                        <a asp-action="Reciept" asp-route-id="@item.Id" class="btn btn-primary">View Receipt</a>
                    </td>
                }else
                {
                     <td scope="row">
                        <a asp-action="MakePayment" asp-route-id="@item.Id" class="btn btn-primary">Make Payment</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
