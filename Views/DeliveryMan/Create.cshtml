@using EcommerceMVC.Enums
@model EcommerceMVC.Models.DTO.DeliveryManDTO.CreateDeliveryManRequestModel


main class="main">

<div class="form-container">

    <div id="Data-form">

        <div class="row">

            <h1>Add new DeliveryMan</h1>

            <hr />
            <div class="col-md-4">
                <form asp-action="CreateDeliveryMan">
                    <div class="form-group">
                        <label asp-for="FirstName"class="control-label"></label>
                        <input asp-for="FirstName" type="text"  class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" type="text"  class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" text="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber"type="phoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="CustomerAddress" class="control-label"></label>
                        <input asp-for="CustomerAddress" class="form-control" />
                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PassWord" class="control-label"></label>
                        <input asp-for="PassWord" type="password" class="text-danger"></span>
                    </div>
                   
                    <input type="submit" value="Create" class="btn btn-success" />
                    <span>
                        <a asp-action="Index" class="btn btn-warning">Back to List</a>
                    </span>
                </form>
            </div>


        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
</main>

