@model EcommerceMVC.Models.DTO.Admin.AdminsResponseModel
<h1>Admin Index</h1>

<p>
    <span> <a asp-controller="Product" asp-action="Create" >Create Product</a></span>

    <span> <a asp-controller="Product" asp-action="View">View Product</a></span>

    <span> <a asp-controller="Customer" asp-action="View" >View Customer</a></span>

    <span> <a asp-controller="DeliveryMan" asp-action="View">View DeliveryMan</a></span>

    <span> <a asp-controller="DeliveryMan" asp-action="View">View DeliveryMan</a></span>
</p>
@{
    
}
<table class="table table-info col-md-4">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
               Last name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-email="@item.Email">Edit</a>
                    <a asp-action="Details" asp-route-email="@item.Email">Details</a>
                    <a asp-action="Delete" asp-route-email="@item.Email">Delete</a>
                </td>
            </tr>

        }
       
    </tbody>
</table>
